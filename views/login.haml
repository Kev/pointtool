- if @message
	%h2
		#{@message}
%form{ :action => $base_url + "/login/", :method => "post"}
	%fieldset
		%label Name:
		%input{:type => "text", :name =>"name"}
		%label Password:
		%input{:type => "password", :name =>"password"}
		%input{:type => "submit", :value => "Login"}

:javascript
	if (typeof CCPEVE != 'undefined') {
		CCPEVE.requestTrust("#{$trusted_url_base}");
	}

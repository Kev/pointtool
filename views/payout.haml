
%h2
	#{@month} #{@year}

%h3 This month:
- if @previous_link
	%a{:href => @previous_link[:url]} Previous Month (#{@previous_link[:month]})
- if @next_link
	%a{:href => @next_link[:url]} Next Month (#{@next_link[:month]})
%form{ :action => @post_url, :method => "post"}
	%fieldset
		%label Pool:
		%input{:type => "text", :name =>"pool", :value => @pool}
		%label Expenses:
		%input{:type => "text", :name =>"expenses", :value => @expenses}
		Put the full value in to the pool and expenses (down to single isk)
		%input{:type => "submit", :value => "Save"}

%h3
	Pool size:
	=@pool_less_expenses

	Point Value
	=@point_value


%table
	%tr
		%th Player
		%th Points
		%th Payout
	%tr
		%td SRP
		%td= @escalation_day_count
		%td= @srp_payout
	- @players.each do |player|
		%tr
			%td= player[:name]
			%td= player[:points]
			%td= player[:payout]

Total paid out: #{@players_payout}